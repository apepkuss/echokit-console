# 数据库连接
DATABASE_URL=postgres://echokit:echokit@localhost:5432/echokit

# Proxy 服务端口
PROXY_PORT=10086

# 健康检查端口
HEALTH_CHECK_PORT=10087

# 日志级别
LOG_LEVEL=info

# WebSocket 超时 (秒)
WS_TIMEOUT=300

# 连接池大小
DB_POOL_SIZE=10

# EchoKit Server 主机地址
# 本地开发使用 localhost，Docker 环境使用 host.docker.internal
ECHOKIT_HOST=localhost
